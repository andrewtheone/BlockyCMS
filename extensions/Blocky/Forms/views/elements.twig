{% macro text(formName, label, key, name, value, error) %}
<div class="input-group">
	<label for="{{ name }}">{{ label }}</label>
	<input type="text" class="form-control" placeholder="" name="{{ name }}" value="{{ value }}" data-error-element="#{{formName}}-{{key}}-error">
	<p id="{{formName}}-{{key}}-error" class="help-block error">{{ error|default('') }}</p>
</div>
{% endmacro %}

{% macro password(formName, label, key, name, value, error) %}
<div class="input-group">
	<label for="{{ name }}">{{ label }}</label>
	<input type="password" class="form-control" placeholder="" name="{{ name }}" value="{{ value }}" data-error-element="#{{formName}}-{{key}}-error">
	<p id="{{formName}}-{{key}}-error" class="help-block error">{{ error|default('') }}</p>
</div>
{% endmacro %}

{% macro select(formName, label, key, options, selected, error) %}
<div class="input-group">
	<label for="{{ name }}">{{ label }}</label>
	<select class="form-control" name="{{ name }}" data-error-element="#{{formName}}-{{key}}-error">
		{% for i, v in options %}
			<option value="{{ i }}" {% if(i == selected) %} selected {% endif %}>{{ v }}</option>
		{% endfor %}
	</select>
	<p id="{{formName}}-{{key}}-error" class="help-block error">{{ error|default('') }}</p>
</div>
{% endmacro %}

{% macro textarea(formName, label, key, name, value, error) %}
<div class="input-group">
	<label for="{{ name }}">{{ label }}</label>
	<textarea class="form-control" rows="5" name="{{ name }}" data-error-element="#{{formName}}-{{key}}-error">{{ value }}</textarea>
	<p id="{{formName}}-{{key}}-error" class="help-block error">{{ error|default('') }}</p>
</div>
{% endmacro %}

{% macro formOpen(formName, href, refer, isAjax, handler) %}
	<form action="{{ href }}" method="post" class="form-horizontal form-{{ formName }}" {% if isAjax %} data-form-ajax data-handler="{{ handler }}" {% endif %}>
	<input name="form" type="hidden" value="{{ formName }}">
	<input name="refer" type="hidden" value="{{ refer }}">
	<input name="type" type="hidden" value="{% if isAjax %}ajax{% else %}standard{% endif %}">
{% endmacro %}

{% macro formClose() %}
	</form>
{% endmacro %}

{% macro submit(text) %}
<button type="submit" class="btn btn-default">{{ text }}</button>
{% endmacro %}