{% set fieldVars = value|default({description: '', keywords: ''}) %}

<div class="form-group">

	<label for="meta_description" class="col-sm-2 control-label">Leírás</label>

	<div class="col-sm-10">
		<div class="input-group" style="width: 100%; margin: 0px;">
			<input type="text" name="{{ inputKey }}[description]" class="form-control1" id="meta_description" value="{{ fieldVars.description }}" placeholder="Meta leírás">
			<div class="input-group-addon"><i class="fa fa-pencil"></i></div>
		</div>
	</div>
</div>

<div class="form-group">

	<label for="meta_keywords" class="col-sm-2 control-label">Kulcsszavak</label>

	<div class="col-sm-10">
		<div class="input-group" style="width: 100%; margin: 0px;">
			<input type="text" name="{{ inputKey }}[keywords]" class="form-control1" id="meta_keywords" value="{{ fieldVars.keywords }}" placeholder="Meta kulcsszavak">
			<div class="input-group-addon"><i class="fa fa-pencil"></i></div>
		</div>
	</div>
</div>